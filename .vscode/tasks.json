{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "presentation": {
    "reveal": "always",
    "panel": "new"
  },
  "tasks": [
    {
      "label": "make clean example-crashpad-mac",
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "command": "make",
      "args": [
        "clean",
        "example-crashpad-mac"
      ],
      "group": "build"
    },
    {
      "label": "1. Generate Project files",
      "group": {
        "isDefault": true,
        "kind": "test"
      },
      "type": "shell",
      "windows": {
        "command": "git submodule update --init --recursive; rm -rf out; cmake -GNinja -Bbuild -H. -DCMAKE_BUILD_TYPE=Debug"
      }
    },
    {
      "label": "2. Build",
      "type": "shell",
      "command": "ninja",
      "options": {
        "cwd": "${workspaceRoot}/build"
      },
      "problemMatcher": []
    }
  ]
}
